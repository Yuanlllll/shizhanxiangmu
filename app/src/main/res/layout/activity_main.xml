<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_icon"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:hint="手机号"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:drawableLeft="@mipmap/login_icon_phone"
        />
    <EditText
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:hint="密码"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:drawableLeft="@mipmap/login_icon_lock"
        android:drawableRight="@mipmap/login_icon_eye"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/jizhu"
            android:layout_marginLeft="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="记住密码"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reg"
            android:layout_marginLeft="180dp"
            android:text="快速注册"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            />
    </LinearLayout>

    <Button
        android:id="@+id/login"
        android:layout_marginLeft="70dp"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="登录"
        android:textColor="#ff5f71"
        android:layout_marginTop="120dp"
        android:background="@drawable/sha"
        android:backgroundTint="#ffffff"

        />



</LinearLayout>